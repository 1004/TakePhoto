<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="使用TakePhoto自带裁切工具裁切图片"
        android:textOff="使用第三方裁切工具裁切图片"
        android:id="@+id/toggleButton" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPickFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从相册获取图片" />
        <Button
            android:id="@+id/btnPickFromGalleryWithCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从相册获取图片并裁剪" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickFromCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从相机获取图片" />
        <Button
            android:id="@+id/btnPickFromCaptureWithCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从相机获取图片并裁剪" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickFromDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从文件选择图片" />
        <Button
            android:id="@+id/btnDocumentsCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="从文件选择图片并裁剪" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="图片多选" />
        <Button
            android:id="@+id/btnPickMultipleCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="图片多选并裁切" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickMultipleCompress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="图片多选并压缩" />
        <Button
            android:id="@+id/btnPickMultipleCropCompress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:text="图片多选裁切并压缩" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llImages"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>